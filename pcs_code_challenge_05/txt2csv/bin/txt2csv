#!/usr/bin/env ruby
require 'csv'
require 'thor'
require_relative '../lib/analyze.rb'

class Txt2csv < Thor
  class_option :name_prefix, :aliases => :p, :boolean => true
  class_option :name_suffix, :aliases => :s
  class_option :input, :aliases => :i
  class_option :output, :aliases => :o
  end

  desc ":name_prefix", "creates prefix histogram"


  def prefix(name)

  end

  def input.source_root
    :input = File.dirname(../lib/raw_customers.txt)
  end

  def output
    output = []
    output << file.new(../lib/prefix_histogram.txt) if options[:name_prefix]
  end
